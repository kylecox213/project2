<nav class="navbar p-4">
  <a href="/home"><button class="btn">Home</button></a>
  <form class="form-inline">
    <input class="form-control mr-sm-2" type="search" placeholder="Search for Candidate" aria-label="Search">
    <button class="btn my-2 my-sm-0" type="submit">Search</button>
  </form>
  <a href="/users/viewall"><button class="btn">View All Candidates</button></a>
  <a href="/users/registercandidate"><button class="btn">Add Candidate</button></a>
  <a href="/logout"><button class="btn">Logout</button></a>
</nav>

<div class="row mt-5" style="max-width: 1200px; margin:auto">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>Recruits</h1>
      <img id="card-logo" src="/imgs/hound.png">
      <hr>
      <div id="cands">
        <ul id="candslist">
          {{#each candidates}}
          <li>
            <p>{{firstName}} {{lastName}} - <a href="/user/{{id}}">Candidate Page</a></p>
            <ul class="jobslist">
              {{#each jobs}}
              <li>
                <p>{{company}}, {{position}}</p>
              </li>
              {{/each}}
            </ul>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>